    default_layer {
      bindings = <
        &kp LG(S) &kp N1    &kp N2   &td_s_par   &td_m_par     &td_l_par &vscode_win2                                                                       &mo MOD &kp RPAR &kp RIGHT_BRACKET &kp STAR    &kp N0   &kp DOLLAR   &tog GAME_LAYER
